<%= form_for(:user, url: session_path(:user)) do |f| %>
  <div>
    <% if user_signed_in? %>
      <%= f.submit "Sign Out", id: "logout_btn", class: 'btn' %>
    <% else %>
      <div class='row center-align'>
        <h3 class='center'> Please Sign In Below: </h3></br>
        <div class='col s4 offset-s4' id='sign_in'>
          <div>
            <%= f.label :email, "Email", class: "search_label" %>
            <%= f.text_field :email, class: "search_text" %>
          </div>
          <div>
            <%= f.label :password, "Password", class: "search_label" %>
            <%= f.password_field :password, class: "search_text" %>
          </div>
          <div>
            <%= f.submit "Sign in", id: "login_btn", class: 'btn' %>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, id: "remember" %>
          </div>
          <div>
          </br>
            <%= link_to "Forgot your password?", new_user_password_path(:user), id: "top_link", class: "btn-small" %>
          </div>
          <%= link_to "Sign up", new_user_registration_path, id: "top_link", class: "btn-large waves-effect waves-light"  %>
        </div>
      </div>
      <hr>
    <h3 class='center-align'>OR</h3>
    <div class='row center-align'>
      <div class='col s4 offset-s4'>
        <%= image_tag("facebook.png", :alt => "facebook icon") %>
        <%= link_to "Join with Facebook", user_facebook_omniauth_authorize_path, class: "btn-large waves-effect waves-light"  %>
    </div>
    <% end %>
    <% end %>
  </div>

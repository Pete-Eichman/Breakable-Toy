<%= form_for(:user, url: session_path(:user)) do |f| %>
  <div>
    <% if user_signed_in? %>
      <%= f.submit "Sign Out", id: "logout_btn", class: 'btn' %>
    <% else %>
      <div class='row left col s12 m6 l6'>
        <div class='col s6 m4 l3'>
          <%= f.label :email, "Login Email", class: "search_label" %>
          <%= f.text_field :email, class: "search_text" %>
        </div>
        <div class='col s6 m4 l3'>
          <%= f.label :password, "Login Password", class: "search_label" %>
          <%= f.password_field :password, class: "search_text" %>
        </div>
      </br>
          <div>
            <%= f.submit "Sign in", id: "login_btn", class: 'btn' %>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <div>
          <%= link_to "Forgot your password?", new_user_password_path(:user), id: "top_link" %>
          <%= link_to "Sign up", new_user_registration_path, id: "top_link", class: "sign_in_links"  %>
        </div>
        <% if !current_user %>
          <div>
            <%= link_to "Facebook", user_facebook_omniauth_authorize_path, class: "sign_in_links"  %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>

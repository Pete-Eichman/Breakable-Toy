<!DOCTYPE html>
<html>
  <head>
    <title>BreakableToyFinal</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div id="topmost_bar" class="row valign">
      <% if current_user %>
        <div class="col s6 right">
          <p id="nav_info"><span>Signed in as <%= current_user.email %></span> /
            <span><%= link_to "Logout", destroy_user_session_path, method: :delete %></span></p>
        </div>
      <% else%>
        <% if controller_name != "sessions" && action_name != "new" %>
          <% if controller_name != "registrations"%>
            <% if action_name != "new" || action_name != "show" %>
              <div class='row valign'>
                <div class="center-align">
                  <h1>ParkMe</h1>
                </div>
                <%= render "layouts/sign_in_form" %>
              </div>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>
    <div>
      <% if flash[:notice] %>
        <p class="center-align"><%= flash[:notice] %></p>
      <% end %>
      <% if flash[:success] %>
        <p class="center-align"><%= flash[:success] %></p>
      <% end %>
      <% if flash[:errors] %>
        <p class="center-align"><%= flash[:errors] %></p>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>

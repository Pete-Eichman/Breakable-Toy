<!DOCTYPE html>
<html>
  <head>
    <title>BreakableToyFinal</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>

  <body>
    <div>
      <% if current_user %>
        <div>
          <div class="center">
            Signed in as <%= current_user.email %>
          </div>
          <div class="left"><i class="material-icons left">person_pin</i><%= link_to "My Profile", user_path(current_user) %></div>
          <div class="right"><i class="material-icons left">power_settings_new</i><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></div>
          <div class="center"><%= link_to "Parking Passes", parking_passes_path %></div>
        </div>
        <hr>
      <% else%>
        <% if controller_name != "sessions" && action_name != "new" %>
          <% if controller_name != "registrations"%>
            <% if action_name != "new" || action_name != "show" %>
              <div class='row valign'>
                <div class="center-align">
                  <h1>Welcome to ParkMe!</h1>
                </div>
                <%= render "layouts/sign_in_form" %>
              </div>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>
    <div>
      <% if flash[:notice] %>
        <p class="center-align"><%= flash[:notice] %></p>
      <% end %>
      <% if flash[:success] %>
        <p class="center-align"><%= flash[:success] %></p>
      <% end %>
      <% if flash[:errors] %>
        <p class="center-align"><%= flash[:errors] %></p>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>

<!DOCTYPE html>
<html>
  <head>
    <title>BreakableToyFinal</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div>
      <% if current_user %>
        <div>
          <p id="nav_info"><span>Signed in as <%= current_user.email %></span> /
            <span><%= link_to "Logout", destroy_user_session_path, method: :delete %></span></h5>
        </div>
      <% else%>
        <% if controller_name != "sessions" && action_name != "new" %>
          <% if controller_name != "registrations"%>
            <% if action_name != "new" || action_name != "show" %>
              <div class='row valign'>
                <div class="center-align">
                  <h1>HI</h1>
                </div>
                <%= render "layouts/sign_in_form" %>
              </div>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>
    <% if !current_user %>
      <div id="sub_top_bar" class='row'>
        <div class='col right'>
          <%= link_to "Facebook", user_facebook_omniauth_authorize_path, id: "top_link", class: "sign_in_links"  %>
          <%= link_to "Sign up", new_user_registration_path, id: "top_link", class: "sign_in_links"  %>
        </div>
      </div>
    <% end %>

    <div>
      <% if flash[:notice] %>
        <p class="center-align"><%= flash[:notice] %></p>
      <% end %>
      <% if flash[:success] %>
        <p class="center-align"><%= flash[:success] %></p>
      <% end %>
      <% if flash[:errors] %>
        <p class="center-align"><%= flash[:errors] %></p>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
